        android:layout_alignStart="@id/arrow4"
        android:layout_alignTop="@id/arrow4"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/view_style"
        android:padding="10dp"
        android:text="aisfhoeuhfujsadhff  ejdhfoiak"
        android:textColor="@color/text_color"
        android:visibility="invisible" />


    <ImageView
        android:id="@+id/arrow5"
        android:layout_width="90dp"
        android:layout_height="180dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:src="@drawable/arrow_vertical_down_left" />

    <TextView
        android:id="@+id/greeting_hint5"
