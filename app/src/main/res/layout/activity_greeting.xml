<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".activities_and_their_logics.activities.GreetingActivity">

    <Button
        android:id="@+id/button_for_greeting_hints"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/view_color" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"

        />

    <ImageView
        android:id="@+id/notification"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/notification" />

    <FrameLayout
        android:id="@+id/first_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignBottom="@id/bottom_navigation"

        />


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/navigation_bar_style"

        app:itemIconTint="@drawable/bottom_navigation_selector"
        app:itemTextColor="@drawable/bottom_navigation_selector"
        app:menu="@menu/bottom_nav_menu">

    </com.google.android.material.bottomnavigation.BottomNavigationView>


    <ImageView
        android:id="@+id/arrow1"
        android:layout_width="90dp"
        android:layout_height="180dp"
        android:src="@drawable/arrow_vertical_up_left"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/greeting_hint1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/arrow1"
        android:layout_alignBottom="@id/arrow1"
        android:layout_marginLeft="80dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/view_style"
        android:padding="10dp"
        android:text="aisfhoeuhfujsadhff  ejdhfoiak"
        android:textColor="@color/text_color"
        android:visibility="invisible" />


    <ImageView
        android:id="@+id/arrow3"
        android:layout_width="90dp"
        android:layout_height="180dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="-13dp"
