<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".activities_and_their_logics.fragments.RegistrationFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="125dp">

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="50dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/profile_picture"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:maxHeight="100dp"
                android:src="@drawable/person" />
        </androidx.cardview.widget.CardView>


        <Button
            android:id="@+id/button_to_change_pp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:background="#00000000" />

    </RelativeLayout>


    <com.example.flexible_talk.activities_and_their_logics.adding.InputField
        android:id="@+id/input_email_registration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        app:title="Email address" />

    <com.example.flexible_talk.activities_and_their_logics.adding.InputField
        android:id="@+id/input_password_registration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:inputType="textPassword"
        app:title="Password" />

    <com.example.flexible_talk.activities_and_their_logics.adding.InputField
        android:id="@+id/repeat_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:inputType="textPassword"
        app:title="Repeat password" />

    <com.example.flexible_talk.activities_and_their_logics.adding.InputField
        android:id="@+id/nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:inputType="text"
        app:title="NickName" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <com.example.flexible_talk.activities_and_their_logics.adding.ActionButton
        android:id="@+id/registration_button"
        android:layout_width="320dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:text="Войти" />

</LinearLayout>