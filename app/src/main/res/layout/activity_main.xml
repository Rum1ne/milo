<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".activities_and_their_logics.activities.MainActivity">

    <Button
        android:id="@+id/hints_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000" />

    <TextView
        android:id="@+id/hints"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="250dp"
        android:background="@drawable/view_style"
        android:paddingTop="20dp"
        android:paddingBottom="30dp"
        android:text="Hello"
        android:textAlignment="center"
        android:textColor="@color/text_color"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/hints"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="3dp"
        android:text="Click anywhere to continue"
        android:textColor="@color/hint_text_color" />



</RelativeLayout>